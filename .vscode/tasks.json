{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Flow",
            "type": "shell",
            "command": "conan install . -if build/ -s build_type=Release"
        },
        {
            "label": "Build Flow",
            "type": "shell",
            "command": "conan build . -bf build/",
            "group": "build",
            "dependsOn": [
                "Install Flow"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Export Flow",
            "type": "shell",
            "command": "conan export . spiessensm/testing",
            "dependsOn": [
                "Build Flow"
            ]
        },
        {
            "label": "Install FlowTest Debug",
            "type": "shell",
            "command": "conan install . -if build/Debug/ -s build_type=Debug",
            "dependsOn": [
                "Export Flow"
            ],
            "options": {
                "cwd": "test_package/"
            }
        },
        {
            "label": "Build FlowTest Debug",
            "type": "shell",
            "command": "conan build . -bf build/Debug/",
            "dependsOn": [
                "Install FlowTest Debug"
            ],
            "options": {
                "cwd": "test_package/"
            }
        },
        {
            "label": "Run FlowTest",
            "type": "shell",
            "command": "conan test test_package Flow/2.0@spiessensm/testing -s build_type=Release",
            "group": "test",
            "dependsOn": [
                "Export Flow"
            ]
        }
    ]
}